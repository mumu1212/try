.user-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.container-box {
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 30rpx;
    width: 95%;
}
/* 用户名 */
.user-name{
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 40rpx;
}
/* ‘默认’logo */
.default-logo{
    margin: 0 20rpx;
    padding: 0 10rpx;
    font-size: 20rpx;
    color: rgba(34, 139, 34, 0.932);
    border: 1rpx solid rgba(34, 139, 34, 0.932);
    border-radius: 10rpx;
}
.user-card{
    font-size: 25rpx;
}
/* 用户电子卡详情 */
.user-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-radius: 20rpx;
    padding:10rpx 30rpx;
    background-color: white;
}
/* 二维码 */
.user-qrcode-shot {
    width: 60rpx;
    height: 60rpx;
}
/* 办卡按钮 */
.bind-card-button {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 30rpx;
    width: 80%;
    height: 60rpx;
    line-height: 50rpx;
    border:1rpx solid rgba(153, 153, 153, 0.384);
    border-radius: 10rpx;
    background-color:white;
    font-size: 30rpx;
}
/* 用户电子卡边框 */
.box-border{
    padding: 15rpx;
    border-radius: 20rpx;
    background-image: repeating-linear-gradient(-45deg, #00cdac, #8ddad5b4, transparent 10rpx, transparent 10rpx);
}