.interview {
    background-color: white;
    margin:20rpx;
    border-radius: 30rpx;
}
.interview-text{
     display: flex;
    justify-content: center;
    margin: 10rpx 20rpx;
    font-size: 35rpx;
}
.star{
    display: flex;
    justify-content: center;
     font-size: 50rpx;
}
.select-choose{
    margin-left: 40rpx;
    flex-direction: column;
}
/* 选择框 */
.choice{
margin:10rpx 0;
}
.interview .paragraph{
    height: 100rpx;
    background-color: white;
    display: flex;
    align-items: center;
}
.cu-form-group+.cu-form-group{
	border:none;
}
.interview .paragraph,.opinion{
     margin: 0 30rpx;
    border-bottom: 1rpx solid rgba(153, 153, 153, 0.301);
}
.opinion{
height: 300rpx;
display: flex;
justify-content: left;
align-items: center;
flex-direction: column;
margin: 20rpx 30rpx;
}
.opinion-title{
    width: 100%;
    margin-top: 20rpx; border-bottom: 1rpx solid rgba(153, 153, 153, 0.301);
}
textarea{
    margin-top: 30rpx;
}