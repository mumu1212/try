/* pages/bincar/bincar.wxss */
.bind-tips{
    background-color: rgb(251, 245, 211)
}

.bind-tips .left {
    color: orange;
}
.bind-tips .right {
    background-color: red;
    color: white;
    padding: 5rpx;
    border-radius: 8rpx;
    float: right;
}
.car-tips {
    color: #666;
    border-bottom: 1px solid #ddd;
}

.car-tips .right{
    border: 1px solid red;
    color: red;
    padding: 5rpx;
    width: 130rpx;
    text-align: center;
    border-radius: 8rpx;
    float: right;
}

.img {
    padding-top:80rpx;
    text-align:center;
    padding-bottom: 50rpx;
    border-bottom: 1px solid #ddd;
}

.img image{
    width: 50%;
    height: 210rpx;
}

.img-wz {
    color: #666;
    font-size: 30rpx;
}

.bindcar {
    border: 1px solid darkcyan;
    width: 150rpx;
    height: 50rpx;
    line-height: 50rpx;
    border-radius: 10rpx;
    color: darkcyan;
    display: inline-block;
    margin-top: 20rpx;
}


.bot-left {
    float: left;
}

.bot .iconyinhangqia{
    color: darkcyan;
    margin-right: 8rpx;
   
}
.bot-right {
    float: right;
    color: #666;
    font-size: 26rpx;
    padding-top: 5rpx;
}

.user-car{
    width: 95%;
    background-image: repeating-linear-gradient(45deg, #cce7ff, #fff, transparent 10rpx, transparent 10rpx);
    margin: 30rpx auto;
    border-radius: 15rpx;
    height: 160rpx;
    padding:10rpx;
    display: flex;
}

.car-info {
    width: 75%;
    border-bottom-left-radius: 15rpx;
    border-top-left-radius: 15rpx;
    padding-left: 25rpx;
    margin-left: 7rpx;
    float: left;
    
}

.user-name {
    color: black;
    font-size: 32rpx;
    padding-top:7rpx;
}

.gree {
    color: cadetblue;
    border: 1px solid cadetblue;
    font-size: 22rpx;
    width: 220rpx;
    border-radius: 8rpx;
    margin-left: 15rpx;
    padding: 5rpx;
}

.carnum {
    color: #666;
    font-size: 22rpx;
}

.bind {
    color: green;
    padding-bottom:8rpx;
}

.bind .iconyoujiantou {
    color: green;
    margin-left: 5rpx;
}

.info-right {
    float: right;
    width: 24%;
    border-bottom-right-radius: 15rpx;
    border-top-right-radius: 15rpx;
    position: relative;
}

.qecode {
    background-color: pink;
    width: 50rpx;
    height: 50rpx;
    margin: 40rpx auto;
}

.qecode image {
    width: 100%;
    height: 100%;
}

.jiaobiao {
    position: absolute;
    top: 1rpx;
    background-color: green;
    color: white;
    width: 45rpx;
    line-height: 45rpx;
    text-align: center;
    font-size: 24rpx;
    transform: rotate(-45deg);
}