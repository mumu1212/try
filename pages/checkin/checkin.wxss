/* pages/checkin/checkin.wxss */
.serve-info {
    margin: 30rpx auto;
    width: 92%;
    border-radius: 20rpx;
    
}
.serve-top {
    padding: 0rpx 0rpx;
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    height: 500rpx;
    letter-spacing:2rpx;
}
.serve-top image {
    width: 100%;
    height: 100%;
}

.serve-bot {
    padding-bottom: 50rpx;
}

.serve{
    margin: 30rpx auto;
    width: 90%;
    height: 120rpx;
    border-radius: 20rpx;
    text-align: center;
    display: flex;
}

.serve-1 {
    background-color: darkcyan;
}

.serve-2 {
    background-color: #fbbd08;
}

.serve-3 {
    background-color: #8dc63f;
}
.serve-4 {
    background-color: pink;
}
.bot-left {
    flex: 7;
    display: flex;
    padding-left: 50rpx;
}
.left-wz{
    font-size: 32rpx;
    color: white;
    margin-left: 15rpx;
    line-height: 120rpx;
}
.left-icon {
    width: 70rpx;
    height: 70rpx;
    line-height: 70rpx;
    border-radius: 50%;
    color: white;
    background-color: rgba(255, 255, 255, 0.1);
    margin-top: 25rpx;
}
.left-icon icon {
    font-size: 45rpx;
}
.bot-right {
    flex: 3;
    line-height: 120rpx;
    color: white;
    
}

.icon1202youjiantou {
    font-size: 45rpx;
