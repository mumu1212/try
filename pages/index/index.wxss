.title-name {
    color: white;
}

.padding-xl icon {
    font-size: 30rpx;
    color: #999;
}

.index {
    height: 300rpx;
}

.hosp {
    margin: 30rpx;
}

/* 绑定就诊卡 */

.bind-card {
    display: flex;
    align-items: center;
    justify-content: space-around;
    width: 100%;
    height: 180rpx;
    color: #999;
}

.binded-card {
    display: flex;
    margin: 0 50rpx;
    justify-content: space-between;
    width: 100%;
    align-items: center;
    height: 180rpx;
}

/* 已绑定的用户卡信息 */

.user-info {
    flex-direction: column;
}

.user-name {
    font-weight: 900;
    font-size: 40rpx;
}
.user-card-num {
    font-weight: 400;
}
.switch-icon {
    display: flex;
    align-items: center;
    height: 45rpx;
    width: 100rpx;
    border: 0.1rpx solid rgba(153, 153, 153, 0.459);
    border-radius: 30rpx;
    margin: 15rpx 0 0 0;
}

.iconjiaohuan {
    width: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
}

/* 用户二维码点击 */
.user-qrcode {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

.user-qrcode .qrcode .user-qrcode-shot {
    display: flex;
    width: 90rpx;
    height: 90rpx;
}

.qrcode-info {
    margin-top: 5rpx;
    font-size: 25rpx;
    color: #999;
}

.close-user {
    flex-direction: column;
}

/* 挂号栏 */

.items {
    display: flex;
    align-items: center;
    justify-content: space-around;
    background-color: white;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.item {
    height: 150rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
}

/* 住院服务 */

.items-spacial {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 20rpx;
    background-image: linear-gradient(-20deg, #00cdac 0%, #8ddad5 100%);
    margin-bottom: 20rpx;
    border-radius: 20rpx;
}

.items-spacial .live-server {
    height: 150rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.items-spacial .live-server p {
    display: flex;
    justify-content: left;
    align-items: center;
}

.items-spacial .build {
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    width: 70rpx;
    height: 70rpx;
    background-color: white;
}

.items-spacial .build icon {
    color: #00cdac;
    font-size: 45rpx;
}

/* 箭头 */

.right {
    color: white;
}

/* 就医攻略 */

.hosptal-guide {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-bottom: 20rpx;
}

.hosptal-guide .guide-top {
    display: flex;
    align-items: center;
    justify-content: left;
    width: 100%;
    margin: 0 30rpx;
    background-color: white;
    border-radius: 20rpx;
    flex-wrap: wrap;
}

.hosptal-guide .guide-top .item {
    width: 25%;
}

/* 客服电话 */

.telphone {
    color: #999;
    font-weight: 700;
    text-align: center;
}

.hosptal-guide icon {
    color: #00cdac;
    font-size: 45rpx;
}

.items .item icon {
    color: #00cdac;
    font-size: 50rpx;
}

.page-title {
    color: white;
    font-weight: bold;
}

.page-text {
    color: white;
    font-size: 25rpx;
}
